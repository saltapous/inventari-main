<% layout('layouts/boilerplate')%>

    <div class="row">
        <h1 class="text-center">Editar invoice</h1>
        <div class="col-6 offset-3">
            <form action="/invoices/<%=invoice._id%>?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="nom">Nom Invoice</label>
                    <input class="form-control" type="text" id="nom" name="invoice[nom]" value="<%=invoice.nom %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="unitat">Ubicació</label>
                    <input class="form-control" type="text" id="unitat" name="invoice[unitat]" required
                        value="<%= invoice.unitat%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="imatge">Imatge Url</label>
                    <input class="form-control" type="text" id="imatge" name="invoice[imatge]"
                        value="<%= invoice.imatge%>">
                </div>



                <div class="mb-3">
                    <label class="form-label" for="preu">Preu de cost</label>
                    <div class="input-group">
                        <span class="input-group-text" id="preu-label">€</span>
                        <input type="number" min="0"  step="0.01" class="form-control" name="invoice[preu]" id="preu"
                            placeholder="0.00" value="<%= invoice.preu%>" aria-label="preu"
                            aria-describedby="preu-label" required>
                    </div>

                </div>


                <div class="mb-3">
                    <label class="form-label" for="descripcio">Descripció</label>
                    <textarea class="form-control" type="text" id="descripcio" required
                        name="invoice[descripcio]"><%= invoice.descripcio%></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Modifica invoice</button>
                </div>
            </form>
            <a href="/invoices">Tots els Invoices</a>
        </div>
    </div>